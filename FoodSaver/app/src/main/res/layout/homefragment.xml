<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#263238">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Food"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:textColor="#FF6D00"
            android:textStyle="bold"
            android:textSize="35dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Saver"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center|left"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Food Saver is an edible food recovery application which serves surplus excess food from weddings and other events to hungry and deprived people who are in need and the age care. The Donation of the excess food enables it to be used in a vital way. People can donate money for the events to help the NGO's. "
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:textSize="20dp"/>


</LinearLayout>